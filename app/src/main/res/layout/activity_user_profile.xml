<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#b8c0ff"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/Back"
                android:layout_width="50dp"
                android:layout_height="40dp"

                android:layout_marginLeft="20dp"
                android:src="@drawable/baseline_arrow_back_ios_24_darkblue" />

            <TextView
                android:id="@+id/userprofileTextV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Profile"
                android:textStyle="bold"
                android:textColor="#03103E"
                android:textAlignment="center"
                android:textSize="24sp" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:layout_margin="20dp"
            android:background="@drawable/custom_edittext"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:orientation="vertical"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/personImage"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"

                    android:src="@drawable/baseline_person_outline_24" />

                <TextView
                    android:id="@+id/usernameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Username: Abhay Mule"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/emailTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Email: abhay@gmail.com"
                    android:textAlignment="center"
                    android:textSize="18sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:layout_marginHorizontal="10dp"
            android:background="#b8c0ff"
            android:orientation="horizontal"

            >

            <androidx.cardview.widget.CardView
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/custom_edittext"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp"
                android:layout_weight="1"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/editImage"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"

                        android:src="@drawable/baseline_person_24" />

                    <TextView
                        android:id="@+id/editTextView"
                        android:layout_width="54dp"
                        android:layout_height="45dp"
                        android:text="Edit"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="19sp" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/custom_edittext"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/settingImage"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"

                        android:src="@drawable/baseline_settings_24" />

                    <TextView
                        android:id="@+id/settingTextView"
                        android:layout_width="77dp"
                        android:layout_height="45dp"
                        android:gravity="center"
                        android:text="Setting"

                        android:textSize="19sp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:layout_marginHorizontal="10dp"
            android:background="#b8c0ff"

            android:orientation="horizontal"
            >

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/custom_edittext"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/securityImage"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"

                        android:src="@drawable/baseline_security_24" />

                    <TextView
                        android:id="@+id/securityTextView"
                        android:layout_width="84dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Account\nSecurity"
                        android:textSize="19sp" />
                </LinearLayout>
                <!--<ImageView
                    android:id="@+id/securityImage"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="-99px"
                    android:layout_marginTop="-9dp"
                    android:src="@drawable/baseline_security_24" />

                <TextView
                    android:id="@+id/securityTextView"
                    android:layout_width="104dp"
                    android:layout_height="57dp"
                    android:layout_marginLeft="180px"
                    android:text="Account Security"
                    android:textSize="19sp" />-->

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/custom_edittext"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/chpasswordImage"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"

                        android:src="@drawable/baseline_lock_24" />

                    <TextView
                        android:id="@+id/ChpasswordTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:text="Change\nPassword"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="19sp" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:background="#b8c0ff"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal"
            >

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/custom_edittext"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/helpImage"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"

                        android:src="@drawable/baseline_help_24" />

                    <TextView
                        android:id="@+id/helpTextView"
                        android:layout_width="54dp"
                        android:layout_height="45dp"
                        android:text="Help"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="19sp" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/custom_edittext"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/invifriendsImage"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"

                        android:src="@drawable/baseline_person_add_24" />

                    <TextView
                        android:id="@+id/invifriendsTextView"
                        android:layout_width="54dp"
                        android:layout_height="45dp"
                        android:text="Invite Friends"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="19sp" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Sign out"
                android:paddingHorizontal="30dp"
                android:paddingVertical="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#03103E"
                android:layout_marginBottom="50dp"
                />
        </LinearLayout>
    </LinearLayout>


</ScrollView>